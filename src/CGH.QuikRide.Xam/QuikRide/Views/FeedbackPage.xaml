<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuikRide.Views.FeedbackPage"
             Title="Feedback">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" Spacing="0">
            <Image Margin="0,40,0,0" WidthRequest="200">
                <Image.Source>
                    <UriImageSource Uri="{StaticResource QuikRideLogo}" CacheValidity="100" CachingEnabled="True" />
                </Image.Source>
            </Image>
            <Label Text="We would love to hear from you!" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Medium" />

            <Label Text="Feedback Type" />
            <Picker ItemsSource="{Binding FeedbackTypeList}" SelectedItem="{Binding SelectedFeedbackType}" />

            <Label Text="Title" />
            <Entry Text="{Binding Title}" />

            <Label Text="Description" />
            <Editor Text="{Binding Description}" />

            <Label Text="Vehicle" />
            <Picker ItemsSource="{Binding VehicleList}" SelectedItem="{Binding SelectedVehicle}" />

            <Button Text="Submit" Command="{Binding SubmitFeedbackCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>